{
  "manifest_version": 2,

  "name": "Tipatos",
  "description": "Queue, sort, and listen to music from Youtube conveniently through this browser extension!",
  "version": "1.0",

  "permissions": [
    "http://www.youtube.com/*",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "img/youtube_logo.png",
    "default_popup": "foreground.html"
  },

  "background": {
  	"page": "background.html"
  },

  "icons": { "16": "img/youtube_logo.png", 
             "48": "img/youtube_logo.png",
             "128": "img/youtube_logo.png" 
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}